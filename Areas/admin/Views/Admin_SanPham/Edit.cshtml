<script type="text/javascript">
    $(function () {
        $("#form").submit(function (e) {
            var run = true;
            run = kiemtra("tieude", "sTIEU_DE", run);

            if (!run) {
                e.preventDefault();
            }
        });
    });

    function kiemtra(label, control, run) {
        var gt = $("#" + control).val();
        if (gt.length == 0) {
            $("#" + label).css("color", "#ff0000");
            alert("Chưa nhập đủ thông tin " + label);
            run = false;
        }
        else $("#" + label).css("color", "#000");
        return run;
    }

</script>

