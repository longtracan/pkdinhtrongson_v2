@{
    ViewBag.Title = "SendZalo";
    Layout = "~/Views/Shared/_Layout-Home.cshtml";
}

<div class="checkout-area pt-100 pb-20">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" style="background-color:darkcyan">
                <form id="formInfo">

                    <div class="billing" style="background-color:lightblue">
                        <h3>ĐẶT LỊCH KHÁM</h3>
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label>Nhân viên đặt lịch</label>
                                    <input id="staff_name" type="text" class="form-control" required maxlength="30" minlength="2">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Họ Và Tên Người Khám</label>
                                    <input id="customer_name" type="text" class="form-control" required maxlength="30" minlength="5">
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label>Năm Sinh*</label>
                                    <input id="number" type="text" class="form-control" required minlength="4" maxlength="20">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Ngày đặt lịch khám</label>
                                    <input type='text' id="schedule_time" class='form-control' data-enabletime=true data-date-format="Y/m/d" placeholder="định dạng 08:30 21/10/2023">
                                    @*<input placeholder="định dạng 08:30 21/10/2023" id="schedule_time" type="text" class="form-control">*@
                                </div>
                            </div>

                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label>Số điện thoại *</label>
                                    <input id="phone_number" type="text" class="form-control" value="" required minlength="9">
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label>Mã khách hàng</label>
                                    <input required id="customer_code" type="text" class="form-control">
                                </div>
                            </div>

                            <div class="col-lg-10">
                                <div class="form-group">
                                    <label>Chi tiết dịch vụ khám</label>
                                    <textarea id="product_name" rows="2" class="form-control" maxlength="100"></textarea>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Mã Code</label>
                                    <textarea id="code" rows="4" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    @*<label style="color:crimson">Số điện thoại gửi Zalo</label>*@
                                    <input value="" placeholder="Số điện thoại gửi Zalo (thay 0 = 84)" id="phone_sendzalo" type="text" class="form-control" required minlength="9">
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <button type='button' id="SendAPIZalo" class="common-btn">
                                    <span class="one"></span>
                                    <span class="two"></span>
                                    Gửi Zalo đặt lịch khám
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


